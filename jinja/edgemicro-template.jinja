{% set  NETWORK_NAME = env['deployment'] + '-' + 'network' %}

resources:
- name: {{ NETWORK_NAME }}
  type: edgemicro-network-template.jinja
- name: {{ NETWORK_NAME }}-firewall
  type: edgemicro-firewall-template.jinja
  properties:
    network: {{ NETWORK_NAME }}
- name: edgemicro
  type: edgemicro-vm-template.jinja
  properties:
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    network: {{ NETWORK_NAME }}
    license: {{ properties["license"] }}
    microgateway-config: {{ properties["microgateway-config"] }}
    yaml-file: {{ properties["yaml-file"] }}
    version: {{ properties['version']}}
